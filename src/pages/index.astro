---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "It's Taksh";
---

<BaseLayout pageTitle={pageTitle}>
	<div class="h-screen grid grid-cols-2 overflow-hidden max-h-screen big_one">
		<div class="flex flex-col gap-0">
			<div
				class="border-b border-zinc-950 h-[28%] flex justify-end items-end relative"
			>
				<div class="mb-5 mr-10 opacity-70">
					<div class="relative">
						<img
							src="/butterfly_front.avif"
							alt="butterfly front"
							class="absolute -top-7 right-1/3 -translate-x-1/2 w-40 transform -rotate-20 object-contain scale-x-[-1] z-10"
						/>
					</div>
					<span class="text-8xl tracking-tighter font-bold">t</span>
					<span class="text-9xl font-semibold">あ</span><span
						class="text-8xl">ક્ષ</span
					><br />
					<span class="tracking-tight text-xs ms-3 opacity-80">
						_ _A slothful creature from Earth_ _
					</span>
				</div>
			</div>
			<div
				class="border-b border-zinc-950 h-[12%] flex justify-center items-center relative"
			>
				<div class="absolute top-1/3 left-1/3 scale-[4] opacity-20">
					未
				</div>
				<span class="uppercase tracking-wide text-xl opacity-100"
					>We know very little</span
				>
			</div>
			<div class="grid grid-cols-[30%_62%_8%] flex-1">
				<div class="border-r border-zinc-950 relative">
					<img
						src="/img-左.jpg"
						alt="img hidari"
						class="absolute
								object-cover
								top-24
								-right-80
								scale-[1.7]
								2xl:scale-[1.7]
								xl:scale-[1.4]
								lg:scale-[1.2]
								md:scale-[1.05]
								sm:scale-[0.95]
								2xl:-right-80
								xl:-right-64
								lg:-right-48
								md:-right-32
								sm:-right-20"
					/>
				</div>
				<div
					class="border-r border-zinc-950 flex flex-col gap-0 h-full ms-10"
				>
					<div class="flex-2"></div>
					<div class="flex-1">
						<div class="flex flex-col gap-2">
							<span class="text-2xl txt_bg_clr w-fit opacity-80"
								>い am</span
							>
							<span class="tracking-tight text-xs opacity-80"
								>_ _an extroverted introvert, if that makes
								sense_ _</span
							>
						</div>
					</div>
				</div>
				<div class="flex justify-center items-center">
					<span
						class="uppercase tracking-wide text-sm opacity-80 [writing-mode:vertical-rl] cursor-vertical-text"
						>I'm too old to do <a href="https://www.hindwi.org/hindi-dictionary/meaning-of-parvaah" target="_blank" class="tag_button">परवाह</a></span
					>
				</div>
			</div>
		</div>
		<div class="absolute top-0 left-1/2 h-full w-px bg-zinc-950"></div>
		<div class="flex flex-col gap-0">
			<div class="border-b border-zinc-950 h-[11%]"></div>
			<div class="grid grid-cols-2 flex-1">
				<div class="border-r border-zinc-950">
					<img
						src="/img-右.jpg"
						alt="img migi"
						class="w-full h-full object-cover"
					/>
				</div>
				<div class="">
					<div class="flex flex-col gap-0 h-full">
						<div
							class="border-b border-zinc-950 flex-1 justify-center items-center mt-20"
						>
							<div
								class="flex flex-col justify-center items-center"
							>
								<span
									class="uppercase txt_bg_clr text-3xl opacity-80"
									>I'm not lazy</span
								>
								<span
									class="mt-3 tracking-tight text-xs opacity-60"
									>_ _I'm on <a href="https://rekhtagujarati.org/gujarati-dictionary/meaning-of-viraam" target="_blank" class="cursor-pointer tag_button">વિરામ</a> mode_ _</span
								>
							</div>
						</div>
						<div class="flex-1 h-full relative">
							<div class="flex flex-col ms-7 mt-40">
								<div
									class="absolute top-1/3 left-1/3 ms-3 mt-5 scale-[4] opacity-20"
								>
									中
								</div>
								<span class="text-3xl">えnjoying</span>
								<span
									class="mt-3 tracking-tight text-xs opacity-80"
									>_ _being average_ _</span
								>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="small_one">
		<div class="flex flex-col divide-y divide-zinc-900">
			<section
				class="min-h-screen flex flex-col justify-center items-center p-0"
			>
			<img
				src="/butterfly_front.avif"
				alt="butterfly front"
				class="-translate-x-1/2 w-40 transform -rotate-20 object-contain scale-x-[-1] z-10"
			/>
				<div class="opacity-70">
					<span class="text-5xl font-bold ms-10">t</span>
					<span class="text-6xl font-semibold">あ</span>
					<span class="text-5xl">ક્ષ</span>
					<p class="text-xs mt-2 opacity-80">
						_ _A slothful creature from Earth_ _
					</p>
				</div>
			</section>
			<section
				class="relative min-h-[10vh] flex items-center justify-center"
			>
				<div class="absolute text-6xl opacity-10">未</div>
				<span class="uppercase tracking-wide text-lg">
					We know very little
				</span>
			</section>
			<section class="min-h-0 flex items-center justify-center">
				<img
					src="/img-左.jpg"
					alt="img hidari"
					class="w-full object-cover"
				/>
			</section>
			<section class="min-h-[10vh] flex items-start p-6">
				<div>
					<span class="text-xl txt_bg_clr opacity-80">い am</span>
					<p class="text-xs mt-2 opacity-80">
						_ _an extroverted introvert, if that makes sense_ _
					</p>
				</div>
			</section>
			<section class="min-h-[10vh] flex items-center justify-center">
				<span class="uppercase tracking-wide text-sm opacity-80">
					I’m too old to do <a href="https://www.hindwi.org/hindi-dictionary/meaning-of-parvaah" target="_blank" class="tag_button">परवाह</a>
				</span>
			</section>
			<section class="min-h-[60vh]">
				<img
					src="/img-右.jpg"
					alt="img migi"
					class="w-full h-full object-cover"
				/>
			</section>
			<section
				class="relative min-h-[15vh] p-6 flex justify-start items-end flex-col"
			>
				<span class="text-2xl">えnjoying</span>
				<p class="text-xs mt-2 opacity-80">_ _being average_ _</p>
			</section>
			<section
				class="min-h-[15vh] flex flex-col items-center justify-center"
			>
				<span class="uppercase txt_bg_clr text-2xl opacity-80">
					I’m not lazy
				</span>
				<span class="text-xs mt-3 opacity-60">
					_ _I’m on <a href="https://rekhtagujarati.org/gujarati-dictionary/meaning-of-viraam" target="_blank" class="cursor-pointer tag_button">વિરામ</a> mode_ _
				</span>
			</section>
		</div>
	</div>
</BaseLayout>
<style>
	.small_one {
		display: none;
	}
	@media (max-width: 639px) {
		.big_one {
			display: none;
		}
		.small_one {
			display: flex;
		}
	}
</style>
